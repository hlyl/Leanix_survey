# LeanIX Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# LeanIX API Endpoint
LEANIX_URL=https://your-instance.leanix.net

# LeanIX API Token (Bearer token for authentication)
LEANIX_API_TOKEN=your-leanix-api-token-here

# LeanIX Workspace ID (UUID)
LEANIX_WORKSPACE_ID=your-workspace-uuid-here

# Optional: Multiple Workspaces (choose in UI)
# Format 1 (comma list): "Name:UUID,OtherName:UUID"
LEANIX_WORKSPACES=NovoNordisk_sandbox:00000000-0000-0000-0000-000000000000,NovoNordisk_proc:11111111-1111-1111-1111-111111111111
# Format 2 (JSON mapping): {"Name":"UUID","OtherName":"UUID"}
# LEANIX_WORKSPACES_JSON={"NovoNordisk_sandbox":"00000000-0000-0000-0000-000000000000","NovoNordisk_proc":"11111111-1111-1111-1111-111111111111"}

# Backend Configuration
BACKEND_URL=http://api:8000

# Logging Level
LOG_LEVEL=INFO

# Caching Configuration
CACHE_ENABLED=true
MAX_BATCH_SIZE=25
API_TIMEOUT=30

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true

# Docker Configuration
COMPOSE_PROJECT_NAME=leanix-survey

# GitHub Container Registry (GHCR) - Optional for local development
# When pulling published images from GHCR instead of building locally
# Note: CI/CD uses GITHUB_TOKEN automatically; these are for manual push/pull
# GHCR_USERNAME=your-github-username
# GHCR_TOKEN=your-github-personal-access-token-with-packages-scope
